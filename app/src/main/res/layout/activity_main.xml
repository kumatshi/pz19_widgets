<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Заголовок -->

        <!-- Статус виджетов -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Управление Виджетом"
            android:textColor="#2196F3"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:text="Проверка статуса..."
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:elevation="4dp" />

        <!-- Кнопка добавления виджета - ОСНОВНАЯ -->
        <Button
            android:id="@+id/add_widget_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавить виджет на экран"
            android:textSize="18sp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"
            android:padding="16dp"
            android:elevation="8dp" />

        <!-- Кнопка обновления виджетов -->

        <!-- Кнопка информации о виджетах
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Информация в логи"
            android:textSize="16sp"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"
            android:onClick="onLogWidgetInfo"
            android:drawablePadding="8dp" />-->

        <!-- Кнопка показа инструкции
        <Button
            android:id="@+id/show_instructions_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Подробная инструкция"
            android:textSize="16sp"
            android:backgroundTint="#9C27B0"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />-->

        <!-- Кнопка настроек приложения
        <Button
            android:id="@+id/open_settings_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Настройки приложения"
            android:textSize="16sp"
            android:backgroundTint="#607D8B"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp" />-->

        <!-- Быстрая инструкция -->
        <Button
            android:id="@+id/update_widget_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#4CAF50"
            android:drawablePadding="8dp"
            android:text="Обновить все виджеты"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
        <!--
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Быстрый способ:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#E3F2FD"
            android:lineSpacingExtra="4dp"
            android:padding="12dp"
            android:text="1. Нажмите кнопку 'Добавить виджет' выше\n2. Следуйте инструкциям на экране\n3. Или используйте кнопку HOME + долгое нажатие"
            android:textSize="14sp" />  -->

    </LinearLayout>

</ScrollView>